<div class="container">
  <%= form_for @discussion do |f| %>
    <%= f.label :message, :class => 'form-label title1' %>
    <%= f.text_area :message, size: "60x6", :class => 'form-control' %>
    
    <%= hidden_field_tag :note_id, params[:id] %>
    <%= hidden_field_tag :user_id, params[:user_id] %>

    <%= f.submit "Update Comment", :class => 'btn btn-primary' %>
  <% end %>
</div>
