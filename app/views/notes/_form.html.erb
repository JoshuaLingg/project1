<%= form_for @note do |f| %>
  <div class="mb-3">
    <%= f.label :title, :class => 'form-label' %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  
  <div class="mb-3">
    <%= f.label :message, :class => 'form-label' %>
    <%= f.text_area :message, size: "60x6", :class => 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :image, :class => 'form-label' %>
    <%= f.url_field :image, :class => 'form-control' %>
  </div>
  <%= f.submit "New Form", :class => 'btn btn-primary'%>
<% end %>